{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://example.com/schemas/mdast-gfm.schema.json",
	"title": "Full mdast GFM document spec",
	"type": "object",
	"required": [
		"type",
		"children"
	],
	"properties": {
		"type": {
			"const": "root"
		},
		"children": {
			"type": "array",
			"items": {
				"$ref": "#/$defs/blockNode"
			}
		}
	},
	"additionalProperties": false,
	"$defs": {
		"blockNode": {
			"oneOf": [
				{
					"$ref": "#/$defs/root"
				},
				{
					"$ref": "#/$defs/paragraph"
				},
				{
					"$ref": "#/$defs/heading"
				},
				{
					"$ref": "#/$defs/thematicBreak"
				},
				{
					"$ref": "#/$defs/blockquote"
				},
				{
					"$ref": "#/$defs/list"
				},
				{
					"$ref": "#/$defs/listItem"
				},
				{
					"$ref": "#/$defs/code"
				},
				{
					"$ref": "#/$defs/html"
				},
				{
					"$ref": "#/$defs/yaml"
				},
				{
					"$ref": "#/$defs/definition"
				},
				{
					"$ref": "#/$defs/footnoteDefinition"
				},
				{
					"$ref": "#/$defs/customBlockNode"
				}
			]
		},
		"inlineNode": {
			"oneOf": [
				{
					"$ref": "#/$defs/text"
				},
				{
					"$ref": "#/$defs/text-single-line"
				},
				{
					"$ref": "#/$defs/strong"
				},
				{
					"$ref": "#/$defs/emphasis"
				},
				{
					"$ref": "#/$defs/strikethrough"
				},
				{
					"$ref": "#/$defs/inlineCode"
				},
				{
					"$ref": "#/$defs/link"
				},
				{
					"$ref": "#/$defs/linkReference"
				},
				{
					"$ref": "#/$defs/image"
				},
				{
					"$ref": "#/$defs/imageReference"
				},
				{
					"$ref": "#/$defs/break"
				},
				{
					"$ref": "#/$defs/footnoteReference"
				},
				{
					"$ref": "#/$defs/customInlineNode"
				}
			]
		},
		"root": {
			"type": "object",
			"required": [
				"type",
				"children"
			],
			"properties": {
				"type": {
					"const": "root"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/blockNode"
					}
				}
			},
			"additionalProperties": false
		},
		"paragraph": {
			"type": "object",
			"required": [
				"type",
				"children"
			],
			"properties": {
				"type": {
					"const": "paragraph"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/inlineNode"
					}
				}
			},
			"additionalProperties": false
		},
		"heading": {
			"type": "object",
			"required": [
				"type",
				"depth",
				"children"
			],
			"properties": {
				"type": {
					"const": "heading"
				},
				"depth": {
					"type": "integer",
					"minimum": 1,
					"maximum": 6
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/inlineNode"
					}
				}
			},
			"additionalProperties": false
		},
		"thematicBreak": {
			"type": "object",
			"required": [
				"type"
			],
			"properties": {
				"type": {
					"const": "thematicBreak"
				}
			},
			"additionalProperties": false
		},
		"blockquote": {
			"type": "object",
			"required": [
				"type",
				"children"
			],
			"properties": {
				"type": {
					"const": "blockquote"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/blockNode"
					}
				}
			},
			"additionalProperties": false
		},
		"list": {
			"type": "object",
			"required": [
				"type",
				"ordered",
				"children"
			],
			"properties": {
				"type": {
					"const": "list"
				},
				"ordered": {
					"type": "boolean"
				},
				"start": {
					"type": "integer"
				},
				"spread": {
					"type": "boolean"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/listItem"
					}
				}
			},
			"additionalProperties": false
		},
		"listItem": {
			"type": "object",
			"required": [
				"type",
				"children"
			],
			"properties": {
				"type": {
					"const": "listItem"
				},
				"checked": {
					"type": [
						"boolean",
						"null"
					]
				},
				"spread": {
					"type": "boolean"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/blockNode"
					}
				}
			},
			"additionalProperties": false
		},
		"code": {
			"type": "object",
			"required": [
				"type",
				"lang",
				"value"
			],
			"properties": {
				"type": {
					"const": "code"
				},
				"lang": {
					"type": [
						"string",
						"null"
					]
				},
				"meta": {
					"type": [
						"string",
						"null"
					]
				},
				"value": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"html": {
			"type": "object",
			"required": [
				"type",
				"value"
			],
			"properties": {
				"type": {
					"const": "html"
				},
				"value": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"yaml": {
			"type": "object",
			"required": [
				"type",
				"value"
			],
			"properties": {
				"type": {
					"const": "yaml"
				},
				"value": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"definition": {
			"type": "object",
			"required": [
				"type",
				"identifier",
				"url"
			],
			"properties": {
				"type": {
					"const": "definition"
				},
				"identifier": {
					"type": "string"
				},
				"url": {
					"type": "string"
				},
				"title": {
					"type": [
						"string",
						"null"
					]
				}
			},
			"additionalProperties": false
		},
		"footnoteDefinition": {
			"type": "object",
			"required": [
				"type",
				"identifier",
				"children"
			],
			"properties": {
				"type": {
					"const": "footnoteDefinition"
				},
				"identifier": {
					"type": "string"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/blockNode"
					}
				}
			},
			"additionalProperties": false
		},
		"text": {
			"type": "object",
			"required": [
				"type",
				"value"
			],
			"properties": {
				"type": {
					"const": "text"
				},
				"value": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"text-single-line": {
			"type": "object",
			"required": [
				"type",
				"value"
			],
			"properties": {
				"type": {
					"const": "text"
				},
				"value": {
					"type": "string",
					"minLength": 0,
					"pattern": "^[^\\r\\n]*$"
				}
			},
			"additionalProperties": false
		},
		"strong": {
			"type": "object",
			"required": [
				"type",
				"children"
			],
			"properties": {
				"type": {
					"const": "strong"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/inlineNode"
					}
				}
			},
			"additionalProperties": false
		},
		"emphasis": {
			"type": "object",
			"required": [
				"type",
				"children"
			],
			"properties": {
				"type": {
					"const": "emphasis"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/inlineNode"
					}
				}
			},
			"additionalProperties": false
		},
		"strikethrough": {
			"type": "object",
			"required": [
				"type",
				"children"
			],
			"properties": {
				"type": {
					"const": "strikethrough"
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/inlineNode"
					}
				}
			},
			"additionalProperties": false
		},
		"inlineCode": {
			"type": "object",
			"required": [
				"type",
				"value"
			],
			"properties": {
				"type": {
					"const": "inlineCode"
				},
				"value": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"break": {
			"type": "object",
			"required": [
				"type"
			],
			"properties": {
				"type": {
					"const": "break"
				}
			},
			"additionalProperties": false
		},
		"link": {
			"type": "object",
			"required": [
				"type",
				"url",
				"children"
			],
			"properties": {
				"type": {
					"const": "link"
				},
				"url": {
					"type": "string"
				},
				"title": {
					"type": [
						"string",
						"null"
					]
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/inlineNode"
					}
				}
			},
			"additionalProperties": false
		},
		"linkReference": {
			"type": "object",
			"required": [
				"type",
				"identifier",
				"children"
			],
			"properties": {
				"type": {
					"const": "linkReference"
				},
				"identifier": {
					"type": "string"
				},
				"label": {
					"type": [
						"string",
						"null"
					]
				},
				"referenceType": {
					"type": [
						"string",
						"null"
					]
				},
				"children": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/inlineNode"
					}
				}
			},
			"additionalProperties": false
		},
		"image": {
			"type": "object",
			"required": [
				"type",
				"url",
				"alt"
			],
			"properties": {
				"type": {
					"const": "image"
				},
				"url": {
					"type": "string"
				},
				"alt": {
					"type": [
						"string",
						"null"
					]
				},
				"title": {
					"type": [
						"string",
						"null"
					]
				}
			},
			"additionalProperties": false
		},
		"imageReference": {
			"type": "object",
			"required": [
				"type",
				"identifier"
			],
			"properties": {
				"type": {
					"const": "imageReference"
				},
				"identifier": {
					"type": "string"
				},
				"label": {
					"type": [
						"string",
						"null"
					]
				}
			},
			"additionalProperties": false
		},
		"footnoteReference": {
			"type": "object",
			"required": [
				"type",
				"identifier"
			],
			"properties": {
				"type": {
					"const": "footnoteReference"
				},
				"identifier": {
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"customBlockNode": {
			"type": "object",
			"required": [
				"type"
			],
			"properties": {
				"type": {
					"type": "string"
				}
			},
			"additionalProperties": true
		},
		"customInlineNode": {
			"type": "object",
			"required": [
				"type"
			],
			"properties": {
				"type": {
					"type": "string"
				}
			},
			"additionalProperties": true
		}
	}
}